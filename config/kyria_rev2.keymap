#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        Qwerty {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  TAB  |  Q  |  W  |  F   |  P     |  B   |                                            |  J   |  L    |  U    |  Y   |   :   |   [  |
            // |  ESC  |  A  |  R  |  S   |  T     |  G   |                                            |  M   |  N    |  E    |  I   |   O   |   '  |
            // | SHIFT |  Z  |  X  |  C   |  D     |  V   | L SHIFT | L SHIFT |    | L SHIFT | L SHIFT |  K   |  H    |  ,    |  .   |   /   | R SHIFT |
            //                     | GUI  | LCTRL  | GUI  |  SPACE  |   ESC   |    |   RET   |  SPACE  | BSPC | TAB   | R-ALT |

            bindings = <
  &kp TAB      &kp Q  &kp W  &kp E      &kp R     &kp T                                                       &kp Y      &kp U      &kp I    &kp O     &kp P   &kp BSLH
  &kp ESC      &kp A  &kp S  &kp D      &kp F     &kp G                                                       &kp H      &kp J      &kp K    &kp L  &kp SEMI    &kp SQT
&kp LSHFT  &kp GRAVE  &kp Z  &kp X      &kp C     &kp V    &kp LSHFT      &kp LSHFT  &kp LSHFT  &kp LSHFT     &kp N      &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT
                             &none  &kp LCTRL  &kp LALT  &lt 1 SPACE  &kp RIGHT_GUI    &kp RET  &kp SPACE  &kp BSPC  &lt 2 DEL      &none
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        Numbers {
            bindings = <
&kp  &kp  &kp      &none  &kp ASTERISK  &kp undefined                                  &kp  &kp KP_NUMBER_7  &kp KP_NUMBER_8  &kp KP_NUMBER_9  &kp  &kp
&kp  &kp  &kp  &kp MINUS      &kp PLUS      &kp EQUAL                                  &kp  &kp KP_NUMBER_4  &kp KP_NUMBER_5  &kp KP_NUMBER_6  &kp  &kp
&kp  &kp  &kp        &kp           &kp            &kp  &kp  &kp  &kp  &kp              &kp  &kp KP_NUMBER_1  &kp KP_NUMBER_2  &kp KP_NUMBER_3  &kp  &kp
                     &kp           &kp            &kp  &kp  &kp  &kp  &kp  &kp KP_NUMBER_0              &kp              &kp
            >;
        };

        Symbols {
            bindings = <
&kp  &kp  &kp  &kp         &kp  &kp undefined                           &kp      &kp LEFT_BRACKET      &kp RIGHT_BRACKET  &kp  &kp  &kp
&kp  &kp  &kp  &kp  &kp DOLLAR  &kp undefined                      &kp EXCL  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp  &kp  &kp
&kp  &kp  &kp  &kp         &kp            &kp  &kp  &kp  &kp  &kp       &kp         &kp LESS_THAN       &kp GREATER_THAN  &kp  &kp  &kp
               &kp         &kp            &kp  &kp  &kp  &kp  &kp       &kp                   &kp                    &kp
            >;
        };

        Colemak_DH {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans                                  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans                                  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
                        &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
        };
    };
};
